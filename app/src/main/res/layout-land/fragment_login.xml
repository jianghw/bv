<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/bv_toolbar_main"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="@dimen/aty_two_third_width"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edit_manager"
                    style="@style/TextNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/edit_title_manger"
                    android:inputType="text"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edit_password"
                    style="@style/TextNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/edit_title_password"
                    android:inputType="text"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/layout_marginTop_first"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_remember_pw"
                    style="@style/TextViewNormal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:button="@drawable/cb_password_selector"
                    android:checked="false"
                    android:paddingLeft="@dimen/layout_marginLeft"
                    android:text="@string/cb_memory_password"/>

                <TextView
                    android:id="@+id/tv_forgive_pw"
                    style="@style/TextViewNormal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/tv_forgive_password"/>

                <TextView
                    android:id="@+id/tv_offline"
                    style="@style/TextViewNormal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/tv_offline_login"/>
            </LinearLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_marginTop_first"
                android:text="@string/btn_login"/>

            <TextView
                android:id="@+id/tv_sign_up"
                style="@style/TextViewNormal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/layout_marginTop_first"
                android:text="@string/tv_sign_in"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>