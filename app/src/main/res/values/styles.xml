<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--登陆页样式，自己看-->
    <style name="AppTheme.Jhw.Login" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/jhwPrimary</item>
        <item name="colorPrimaryDark">@color/jhwPrimaryDark</item>
        <item name="colorAccent">@color/jhwAccent</item>

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/windowBackground</item>

        <item name="colorControlNormal">@color/colorControlNormal</item>
        <!--输入框获焦-->
        <item name="colorControlActivated">@color/jhwPrimary</item>
        <!--控件按下效果-->
        <item name="colorControlHighlight">@color/jhwPrimaryDark</item>
        <item name="android:textColorHint">@color/colorControlNormal</item>
        <!--Button按钮正常状态颜色-->
        <item name="colorButtonNormal">@color/jhwPrimary</item>
        <item name="android:colorButtonNormal" tools:targetApi="LOLLIPOP">@color/jhwPrimary</item>
    </style>
    <!--textView上正常字体-->
    <style name="TextViewNormal" parent="TextNormal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/layout_marginLeft_double</item>
        <item name="android:layout_marginRight">@dimen/layout_marginLeft_double</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textSize_normal</item>
    </style>

    <style name="TextNormal">
        <item name="android:textColor">@color/textNormal</item>
        <item name="android:textSize">@dimen/textSize_normal</item>
    </style>
    <!--大标题上正常字体-->
    <style name="TextTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textSize_title</item>
    </style>

</resources>
